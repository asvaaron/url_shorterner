<div class="container">
  <div class="page-header">
    <h1>Urls</h1>
  </div>
</div><div class="container">
  <table id="mytable" class="table table-striped table-hover">
    <thead class="thead-light">
    <tr>
      <th>Title</th>
      <th>Urls</th>
      <th>Short Url</th>
      <th>Times Accesed</th>
    </tr>
    </thead>
    <tbody>
    <% @urls.each do |url| %>
      <tr>
        <td><%= url.title %></td>
        <td><%= link_to url.url,
                        url.url %>
        </td>
        <td><%= link_to "#{request.protocol}#{request.host_with_port}/#{url.short_url}",
                        "#{request.protocol}#{request.host_with_port}/#{url.short_url}" %>
        </td>
        <td class="text-center">
          <span class="badge badge-primary"><%= url.times_accessed %> </span>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
